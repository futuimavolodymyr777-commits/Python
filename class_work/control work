# завдання 1 метри - сантиметри
print("завдання 1: перетворення метрів у сантиметри")
meters = float(input("введіть довжину в метрах: "))
centimeters = meters * 100
print("довжина в сантиметрах:", centimeters)
input("натисніть Enter, щоб перейти до наступного завдання...\n")

# завдання 2 фарба для чотирьох стін
print("завдання 2: фарба для чотирьох стін")
paint_one_wall = float(input("введіть кількість літрів фарби для однієї стіни: "))
paint_four_walls = paint_one_wall * 4
print("для фарбування чотирьох стін потрібно", paint_four_walls, "літрів фарби")
input("натисніть Enter, щоб перейти до наступного завдання...\n")

# завдання 3 сума різниця добуток
print("завдання 3: арифметичні операції")
a = float(input("введіть перше число: "))
b = float(input("введіть друге число: "))
print("сума:", a + b)
print("різниця:", a - b)
print("добуток:", a * b)
input("натисніть Enter, щоб перейти до наступного завдання...\n")

# завдання 4 відсоток від числа
print("завдання 4: Обчислення відсотка")
value = float(input("введіть число: "))
percent = float(input("введіть відсоток: "))
result = value * percent / 100
print("результат:", result)
input("натисніть Enter, щоб перейти до наступного завдання...\n")

# завдання 5 площа прямокутника
print("завдання 5: площа прямокутника")
width = float(input("введіть ширину прямокутника: "))
height = float(input("введіть висоту прямокутника: "))
area = width * height
print("площа прямокутника:", area)
input("натисніть Enter, щоб перейти до наступного завдання...\n")

# завдання 6 периметр квадрата
print("завдання 6: периметр квадрата")
a = float(input("введіть довжину сторони квадрата: "))
P = 4 * a
print("периметр квадрата:", P)

print("\n усі завдання виконані <3")